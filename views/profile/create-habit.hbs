<h1>This is a new habit page</h1>

<h2>Add your new Habit</h2>

<form action="/profile/create-habit" method="POST">

    {{!-- Title --}}
    <label for="">Title
        <input type="text" name="title" placeholder="Drink 2L of water everyday">
    </label>

    {{!-- Category --}}
    <label class="radio-button" for="">Category
        <input id="category1" type="radio" name="category" value="Health">
        <label for="category1">Health</label>

        <input id="category2" type="radio" name="category" value="Sport">
        <label for="category2">Sport</label>

        <input id="category3" type="radio" name="category" value="Daily Routine">
        <label for="category3">Daily Routine</label>

        <input id="category4" type="radio" name="category" value="Work">
        <label for="category4">Work</label>
    </label>
    
    {{!-- Duration --}}
    <label class="radio-button" for="">Duration
        <input id="duration1" type="radio" name="duration" value="7 days">
        <label for="duration1">7 days</label>

        <input id="duration2" type="radio" name="duration" value="14 days">
        <label for="duration2">14 days</label>

        <input id="duration3" type="radio" name="duration" value="21 days">
        <label for="duration3">21 days</label>
    </label>
    
    {{!-- Description --}}
    <label for="">Description
        <input type="text" name="description">
    </label>
<input type="submit"></form>
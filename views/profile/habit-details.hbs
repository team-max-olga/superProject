  {{#if done}}
      <input type="checkbox" name={{name}} class="input-checkbox"  checked />
    {{else}}
      <input type="checkbox" name={{name}} class="input-checkbox" />
{{/if}}

  {{/each}}
{{/if}}
<br />
{{#each week2Tracker}}
  {{#if checked}}
    <input type="checkbox" name={{name}} class="input-checkbox"  />
  {{else}}
    <input type="checkbox" name={{name}} class="input-checkbox" />
  {{/if}}
{{/each}}
<br />
{{#each week3Tracker}}
  {{#if checked}}
    <input type="checkbox" name={{name}} class="input-checkbox"  />
  {{else}}
    <input type="checkbox" name={{name}} class="input-checkbox" />
  {{/if}}
{{/each}}

<h3>description: {{description}}</h3>
    <button class="button create-button" type="submit" >TEST ME BUTTON</button>
</form>

<form action="/profile/{{_id}}/delete" method="POST">
  <button class="button delete-button">Delete</button>
</form>

<form action="/profile/{{_id}}/edit" method="GET">
  <button class="button">Edit Details</button>
</form>




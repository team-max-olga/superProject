<div id="profile">
    <div>
    {{#if _id}}
    <h2>Welcome, to your HabitBoard, {{ username }}!</h2>
    {{else}}
    <p>Still no logged in user, sorry!</p>
    {{/if}}
</div>

<div>
    <a class="create-button button" href="/profile/create-habit" id="cr-btn">create a new habit</a>
</div>

<div class="habit-card-list">
    {{#each habit}}

    <div class="habit-card">
        <div class="habit-card-info">
            <img src="/images/icons/{{category}}.svg" width="40" alt="">
            <h3 class="habit-title">{{title}}</h3>
        </div>
        <hr>

        {{!-- week progression --}}
        <div>
        {{#if days}}
            <p>your progression</p>
            {{#each days}}
                {{#if done}}
                <input type="checkbox" name={{name}} class="input-checkbox" checked disabled />
                {{else}}
                <input type="checkbox" name={{name}} class="input-checkbox" />
                {{/if}}
            {{/each}}
        {{/if}}
        </div>

        <hr>
        <a class="" href="/profile/habit/{{_id}}">About</a>
    </div>
    {{/each}}
</div>
</div>


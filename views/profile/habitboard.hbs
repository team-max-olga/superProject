{{!-- page with colored navbar --}}
{{!-- {{#if coloredNavbar}}
  {{#assign bodyClass="colored-navbar"}}
{{/if}} --}}

<div id="habitboard">
<div class="left-profile">
    <div id="profile" class="text-start">

    {{#if info._id}}
        <h2>Welcome, to your HabitBoard, {{ info.username }}!</h2>
    {{else}}
        <p>Still no logged in user, sorry!</p>
    {{/if}}
    </div>


    <div id="habit-cards">
    
    <div>
        <a class="new-habit-button" href="/profile/create-habit">Ð¡reate a new habit</a>
    </div>
    
    {{!-- CARDS --}}

    <div class="habit-card-list">
    {{#each info.habit}}

        <div class="habit-card">
            <div class="habit-card-info">
                <img src="/images/icons/{{category}}.svg" width="40" alt="">
                <h3 class="habit-title">{{title}}</h3>
            </div>
        <hr>

            {{!-- week progression --}}
            <div>
            {{#if days}}
                <p>your progression</p>
            {{#each days}}
                {{#if done}}
                    <input type="checkbox" name={{name}} class="input-checkbox" checked disabled />
                {{else}}
                    <input type="checkbox" name={{name}} class="input-checkbox" />
                {{/if}}
            {{/each}}
            {{/if}}
            </div>
        <hr>

        <a class="about" href="/profile/habit/{{_id}}">About</a>
        </div>
    {{/each}}
    </div>
    {{!-- CARDS END--}}


    </div>

    

</div>
</div>
    

